{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>leanix/.github"
  ],
  "automerge": false,
  "prConcurrentLimit": 1,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "all dependencies",
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "schedule": [
    "* 0-3 * * *"
  ],
  "timezone": "Europe/Berlin"
}
